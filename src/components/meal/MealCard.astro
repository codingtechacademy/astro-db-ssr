---
import type { Meal } from "../../models/meal";

interface Props {
  meal: Meal;
}

const {
  meal: { id, title, image, imageAlt },
} = Astro.props;
---

<li class="meal-card">
  <a class="meal-link" href={`/meal/${id}`}>
    <img src={image} alt={imageAlt} class="meal-card__img" />
    <h3>{title}</h3>
  </a>
</li>

<style>
  .meal-link {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    height: 100%;
  }

  .meal-link:hover {
    opacity: 0.9;
  }

  .meal-card {
    width: 100%;
    list-style-type: none;
    border-radius: 1rem;
  }

  .meal-card__img {
    object-fit: cover;
    width: 100%;
    height: 15rem;
    border-radius: 1rem;
  }

  h3 {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 100%;
    text-align: center;
    transform: translateX(-50%);
    color: white;
    font-size: 1.5rem;
    text-shadow: rgb(17, 17, 16) 1px 0 10px;
  }
</style>
